<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="ListViewExample.Xaml.HomePage" 
Title="Xamarin.Forms ListView">
<ContentPage.Padding>
	<OnPlatform x:TypeArguments="Thickness">
		<OnPlatform.iOS>10,20,10,5</OnPlatform.iOS>
		<OnPlatform.WinPhone>10,0,10,5</OnPlatform.WinPhone>
		<OnPlatform.Android>10,0,10,5</OnPlatform.Android>
	</OnPlatform>
</ContentPage.Padding>
	<TableView Intent="Menu">
		<TableView.Root>
			<TableSection Title="Chapter 5 Examples">
				<TextCell Text="List of Strings" Command="{Binding NavigateCommand}" CommandParameter="ListViewStrings" />
				<TextCell Text="Data Model" Command="{Binding NavigateCommand}" CommandParameter="ListViewDataModel" />
				<TextCell Text="Add Image" />
				<TextCell Text="Customize ListView" Command="{Binding NavigateCommand}" CommandParameter="ListViewCustom" />
				<TextCell Text="Customize with Image" />
				<TextCell Text="Customize with Button" Command="{Binding NavigateCommand}" CommandParameter="ListViewButton"/>
				<TextCell Text="Context Actions" Command="{Binding NavigateCommand}" CommandParameter="ListViewContextAction"/>
				<TextCell Text="Grouping Headers" />
				<TextCell Text="Custom Grouping Headers" />
				<TextCell Text="Scroll the List" />
				<TextCell Text="Optimize Performance" />
			</TableSection>
		</TableView.Root>
	</TableView>
</ContentPage>